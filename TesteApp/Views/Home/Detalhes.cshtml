
@{
    ViewData["Title"] = "Detalhes do Produto";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">


    <style>
        body {
            background-color: #f5f5f5;
        }

        .product-detail-card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            padding: 30px;
        }

        .product-img {
            width: 100%;
            max-height: 500px;
            object-fit: cover;
            border-radius: 8px;
        }

        .product-title {
            font-size: 2rem;
            font-weight: bold;
            color: #333;
        }

        .product-price {
            font-size: 1.8rem;
            color: #e60000;
            font-weight: bold;
        }

        .price-old {
            text-decoration: line-through;
            color: #999;
            font-size: 1rem;
            margin-right: 10px;
        }

        .badge-frete {
            background-color: #ffdd00;
            color: #333;
            font-weight: bold;
            border-radius: 5px;
            padding: 6px 12px;
            display: inline-block;
        }

        .rating-stars {
            color: #ffc107;
            font-size: 1rem;
        }

        .product-description {
            font-size: 1.1rem;
            color: #555;
        }

        .btn-comprar {
            background-color: #ff9900;
            border: none;
            font-weight: bold;
        }

            .btn-comprar:hover {
                background-color: #e68a00;
            }
    </style>
</head>
<body>

    <div class="container py-5">
        <div class="product-detail-card row">
            <div class="col-md-6">
                <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @if (!string.IsNullOrEmpty(Model.Imagem))
                        {
                            <div class="carousel-item active">
                                <img src="@Model.Imagem" class="d-block w-100 product-img" alt="Imagem 1">
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Imagem2))
                        {
                            <div class="carousel-item">
                                <img src="@Model.Imagem2" class="d-block w-100 product-img" alt="Imagem 2">
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Imagem3))
                        {
                            <div class="carousel-item">
                                <img src="@Model.Imagem3" class="d-block w-100 product-img" alt="Imagem 3">
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Anterior</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Próxima</span>
                    </button>
                </div>

            </div>
            <div class="col-md-6">
                <h1 class="product-title">@Model.Nome</h1>

                <div class="rating-stars mb-2">
                    ★ ★ ★ ★ ☆
                </div>

                <div class="mb-3">
                    <span class="product-price">@((Model.Preco / 100).ToString("C", new System.Globalization.CultureInfo("pt-BR")))</span>

                </div>

                <span class="badge-frete mb-3">Frete grátis</span>

                <p class="product-description mt-4">@Model.Descricao</p>

                <a href="#" class="btn btn-comprar btn-lg w-100 mt-4">Comprar agora</a>
                <a href="@Url.Action("Editar", new {id = Model.Id})" class="btn btn-success btn-lg w-100 mt-2">Editar</a>
                <form asp-action="Deletar" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Tem certeza que deseja excluir este produto?');">
                    <button type="submit" class="btn btn-danger btn-lg w-100 mt-2">Deletar</button>
                </form>
                <a href="@Url.Action("Produtos")" class="btn btn-secondary btn-lg w-100 mt-2">Voltar</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
