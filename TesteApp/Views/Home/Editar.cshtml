@model TesteApp.Models.Produtos

@{
    ViewData["Title"] = "Editar Produto";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f5f5;
        }

        .product-edit-card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            padding: 30px;
        }

        .form-label {
            font-weight: bold;
            color: #333;
        }

        .btn-salvar {
            background-color: #28a745;
            border: none;
            font-weight: bold;
        }

            .btn-salvar:hover {
                background-color: #218838;
            }

        #imagePreview {
            margin-top: 15px;
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>

    <div class="container py-5">
        <div class="product-edit-card">
            <h2 class="mb-4">@ViewData["Title"]</h2>

            <form asp-action="EditarProduto" asp-controller="Home" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <img id="imagePreview" name="Imagem" src="@Model.Imagem" alt="@Model.Nome" class="product-img img-fluid w-50" />
                </div>
                <input type="file" name="Imagem" src="@Model.Imagem" class="form-control-file" id="Image" accept="image/*">
                <span class="text-danger"></span>
                <small id="fileHelp" class="form-text text-muted">Escolha uma imagem.</small>
                <div class="mb-3">
                    <img id="imagePreview2" name="Imagem2" src="@Model.Imagem2" alt="@Model.Nome" class="product-img img-fluid w-50" />
                </div>
                <input type="file" name="Imagem2" src="@Model.Imagem2" class="form-control-file" id="Image2" accept="image/*">
                <span class="text-danger"></span>
                <small id="fileHelp" class="form-text text-muted">Escolha uma imagem.</small>
                <div class="mb-3">
                    <img id="imagePreview3" name="Imagem2" src="@Model.Imagem3" alt="@Model.Nome" class="product-img img-fluid w-50" />
                </div>
                <input type="file" name="Imagem3" src="@Model.Imagem3" class="form-control-file" id="Image3" accept="image/*">
                <span class="text-danger"></span>
                <small id="fileHelp" class="form-text text-muted">Escolha uma imagem.</small>

                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label"></label>
                    <textarea asp-for="Descricao" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Preco" class="form-label"></label>
                    <input id="PrecoInput1" asp-for="Preco" class="form-control"
                           value="@((Model.Preco / 100.0m).ToString("F2", System.Globalization.CultureInfo.InvariantCulture))" maxlength="10" />
                    



                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Quantidade" class="form-label"></label>
                    <input asp-for="Quantidade" class="form-control" />
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-salvar btn-lg">Salvar Alterações</button>
                    <a href="@Url.Action("Detalhes", new { id = Model.Id })" class="btn btn-secondary btn-lg">Cancelar</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        document.getElementById('Image').addEventListener('change', function (event) {
            const file = event.target.files[0];
            const reader = new FileReader();

            reader.onload = function (e) {
                const image = document.getElementById('imagePreview');
                image.src = e.target.result;
                image.style.display = 'block';
            };

            if (file) {
                reader.readAsDataURL(file);
            }
        });

          document.getElementById('Image2').addEventListener('change', function (event) {
            const file = event.target.files[0];
            const reader = new FileReader();

            reader.onload = function (e) {
                const image = document.getElementById('imagePreview2');
                image.src = e.target.result;
                image.style.display = 'block';
            };

            if (file) {
                reader.readAsDataURL(file);
            }
        });

                  document.getElementById('Image3').addEventListener('change', function (event) {
            const file = event.target.files[0];
            const reader = new FileReader();

            reader.onload = function (e) {
                const image = document.getElementById('imagePreview3');
                image.src = e.target.result;
                image.style.display = 'block';
            };

            if (file) {
                reader.readAsDataURL(file);
            }
        });

        const precoInput = document.getElementById('PrecoInput1');

        precoInput.addEventListener('input', function () {
            let valor = this.value.replace(/\D/g, '');

            if (valor.length === 0) {
                this.value = '';
                return;
            }

            valor = (parseFloat(valor) / 100).toFixed(2);
            this.value = valor;
        });
    </script>

</body>
</html>
