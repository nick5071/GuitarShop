@model Microsoft.AspNetCore.Identity.IdentityUser
@{
    ViewData["Title"] = "Buscar Usuário";
    Layout = null;
    var roles = ViewBag.Roles as IList<string>;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="text-center mb-4">Buscar Usuário por E-mail</h2>

    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Erro"]</div>
    }
    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Sucesso"]</div>
    }

    <form asp-action="BuscarUsuario" asp-controller="Home" method="post" class="mx-auto" style="max-width: 500px;">
        <div class="mb-3">
            <label for="email" class="form-label">E-mail do Usuário</label>
            <input type="email" name="email" class="form-control" required />
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-warning">Buscar</button>
        </div>
    </form>

    @if (Model != null)
    {
        <hr class="my-5" />
        <h4 class="text-center">Detalhes do Usuário</h4>

        <table class="table table-bordered mx-auto" style="max-width: 600px;">
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Nome de Usuário</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>Funções</th>
                <td>@string.Join(", ", roles)</td>
            </tr>
        </table>

        @if (!roles.Contains("Admin"))
        {
            <form asp-action="DeletarUsuario" method="post" class="text-center mt-3">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja excluir este usuário?');">
                    Excluir Usuário
                </button>
            </form>
        }
        else
        {
            <div class="alert alert-warning text-center mt-3">
                Administradores não podem ser excluídos.
            </div>
        }
    }

    <div class="text-center mt-4">
        <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index">Voltar</a>
    </div>
</div>
