<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GuitarShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TesteApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Produtos">Guitar Shop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @if (User.IsInRole("Admin")) 
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Cadastrar Produtos</a>
                                
                            }

                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Produtos">Produtos</a>
                        </li>
                        <li>
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="PaginaAdmin">Administrar Usuarios</a>

                            }
                        </li>

                        <div class="d-flex ms-auto align-items-center">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <span class="me-3 text-muted">
                                    👋 Olá, <strong>@User.Identity.Name</strong>
                                </span>
                                <a href="/Home/PaginaUsuario" class="btn btn-sm btn-outline-primary d-flex align-items-center justify-content-center me-2" style="height: 30px; line-height: 1; padding: 0 12px;">
                                    Conta
                                </a>


                                <form method="post" asp-controller="Home" asp-action="Logout" class="d-inline">
                                    <button class="btn btn-sm btn-outline-danger">
                                        Sair
                                    </button>
                                </form>
                            }
                            else
                            {
                                <div class="d-flex gap-2">
                                    <a href="/Home/Registro" class="btn btn-primary btn-sm">
                                        Registrar
                                    </a>
                                    <a href="/Home/Login" class="btn btn-outline-primary btn-sm">
                                        Login
                                    </a>
                                </div>
                            }
                        </div>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
